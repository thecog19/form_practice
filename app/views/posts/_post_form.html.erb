<%= form_for @post do |form_builder| %>
  <%= form_builder.label :title %>
  <%= form_builder.text_field :title %><br>
  <%= form_builder.label :body %>
  <%= form_builder.text_field :body %>
  <br>
  <%= form_builder.collection_check_boxes :tag_ids, Tag.all, :id, :name  %>
  <br><br>
  <%= form_builder.collection_radio_buttons :category_id, Category.all, :id, :name  %>
  <br> <br>
  <%# form_builder.collection_select :category_id, Category.all, :id, :name,{include_blank: true},class: "green", id: "foobar"  %>
  <br><br>

  <%# form_builder.collection_select :tag_ids, Tag.all, :id, :name,{ },  multiple: true  %>

  <br><br>

  <%= form_builder.fields_for :comments, @comments do |comment_field| %>
    <br>
    <%= comment_field.label :body, 'Comment' %>
    <%= comment_field.text_field :body %>
    <% if comment_field.object.persisted? %>
     <%= comment_field.label :_destroy, "Delete Address?" %>
     <%= comment_field.check_box :_destroy %>
   <% end %>
  <% end %>

  <%= form_builder.fields_for :comments, Comment.new do |comment_field| %>
    <br>
    <%= comment_field.label :body, 'Comment' %>
    <%= comment_field.text_field :body %>
  <% end %>

  <br>
  <%= form_builder.submit "Post!" %>
<% end %>

